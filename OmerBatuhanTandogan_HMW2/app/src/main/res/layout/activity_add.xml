<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etDevicePrice"
        android:layout_width="152dp"
        android:layout_height="42dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDeviceType" />

    <EditText
        android:id="@+id/etDeviceType"
        android:layout_width="152dp"
        android:layout_height="42dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDeviceName"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etDeviceName"
        android:layout_width="152dp"
        android:layout_height="42dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etId"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etId"
        android:layout_width="152dp"
        android:layout_height="42dp"
        android:layout_marginStart="184dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvId"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="88dp"
        android:layout_height="31dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="176dp"
        android:text="ID:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDeviceName"
        android:layout_width="88dp"
        android:layout_height="31dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="240dp"
        android:text="Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDeviceType"
        android:layout_width="88dp"
        android:layout_height="31dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="300dp"
        android:text="Type:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDevicePrice"
        android:layout_width="88dp"
        android:layout_height="31dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="360dp"
        android:text="Price:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="111dp"
        android:layout_height="41dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDevicePrice"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="118dp"
        android:layout_height="41dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="60dp"
        android:text="Close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDevicePrice"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>